#!/usr/bin/env bash

# Install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create Nginx configuration file for your application
sudo bash -c "cat > /etc/nginx/sites-available/strain.gg << EOL
server {
    listen 80;
    server_name strain.gg www.strain.gg;

    location / {
        return 301 /clouds/;
    }

    location /clouds/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host \$host;
        proxy_set_header X-Real-IP \$remote_addr;
        proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto \$scheme;
    }
}
EOL"

# Create a symbolic link to enable the configuration
sudo ln -s /etc/nginx/sites-available/strain.gg /etc/nginx/sites-enabled/

# Test the Nginx configuration
sudo nginx -t

# Restart Nginx to apply changes
sudo systemctl restart nginx
